<base:WindowBase x:Class="AlterTools.BatchExport.Views.NWC.NWCExportView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="900"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Strings.NWCTitle}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.BaseHeader}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Strings.HelpToolTip}"
                Content="{x:Static resx:Strings.Help}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Strings.ListBoxToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Strings.Load}"
                ToolTip="{x:Static resx:Strings.LoadToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Strings.LoadList}"
                ToolTip="{x:Static resx:Strings.LoadListToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Strings.SaveList}"
                ToolTip="{x:Static resx:Strings.SaveListToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Strings.Delete}"
                ToolTip="{x:Static resx:Strings.DeleteToolTip}" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="14"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.SaveToFolder}" />
        <TextBox Grid.Column="0" Margin="165,10,135,10"
                 Grid.Row="3"
                 Grid.ColumnSpan="4"
                 VerticalContentAlignment="Center"
                 Text="{Binding FolderPath}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="3"
                Command="{Binding BrowseFolderCommand}"
                Content="{x:Static resx:Strings.Browse}" />
        
        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   ToolTip="{x:Static resx:Strings.PrefixToolTip}"
                   Text="{x:Static resx:Strings.Prefix}" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.ColumnSpan="2" Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePrefix}"
                 ToolTip="{x:Static resx:Strings.PrefixToolTip}" />
        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   ToolTip="{x:Static resx:Strings.PostfixToolTip}"
                   Text="{x:Static resx:Strings.Postfix}" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePostfix}"
                 ToolTip="{x:Static resx:Strings.PostfixToolTip}" />

        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertElementProperties}"
                  Content="{x:Static resx:Strings.ConvertElementProperties}"/>
        <TextBlock Margin="10,10,110,10"
                   Grid.Row="5"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Coordinates}" />
        <ComboBox Margin="95,10,10,10"
                  Grid.Row="5"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding Coordinates}"
                  SelectedItem="{Binding SelectedCoordinates}"
                  DisplayMemberPath="Value" />
        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="2"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding DivideFileIntoLevels}"
                  Content="{x:Static resx:Strings.DivideFile}"/>
        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportElementIds}"
                  Content="{x:Static resx:Strings.ExportElementIds}"/>

        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportLinks}"
                  Content="{x:Static resx:Strings.ConvertLinks}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportParts}"
                  Content="{x:Static resx:Strings.ConvertParts}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="2"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportRoomAsAttribute}"
                  Content="{x:Static resx:Strings.ConvertRoomAsAttr}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportRoomGeometry}"
                  Content="{x:Static resx:Strings.ExportRoomGeometry}"/>

        <RadioButton Margin="10"
                     Grid.Row="7"
                     Grid.Column="0"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeWhole}"
                     Content="{x:Static resx:Strings.ExportEntireModel}"/>
        <RadioButton Margin="10,10,50,10"
                     Grid.Row="7"
                     Grid.Column="1"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeView}"
                     Content="{x:Static resx:Strings.ExportView}"/>
        <TextBox Margin="155,10,10,10"
                 Grid.Row="7"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding ViewName}" />
        <CheckBox Margin="10"
                  Grid.Row="7"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding IgnoreMissingView}"
                  Content="{x:Static resx:Strings.IgnoreMissingView}"
                  FontSize="11"/>

        <CheckBox Margin="10"
                  Grid.Row="8"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding FindMissingMaterials}"
                  Content="{x:Static resx:Strings.FindMissingMaterials}"/>
        <TextBlock Margin="10,0,30,0"
                   FontSize="12"
                   Grid.Row="8"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{x:Static resx:Strings.ConvertElementParams}" />
        <ComboBox Margin="175,10,10,10"
                  Grid.Row="8"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding Parameters}"
                  SelectedItem="{Binding SelectedParameters}"
                  DisplayMemberPath="Value" />
        <CheckBox Margin="10"
                  Grid.Row="8"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportUrls}"
                  Content="{x:Static resx:Strings.ConvertURLs}" />
        
        <CheckBox Margin="10"
                  Grid.Row="9"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertLinkedCADFormats}"
                  Content="{x:Static resx:Strings.ConvertCAD}"/>
        <CheckBox Margin="10"
                  Grid.Row="9"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertLights}"
                  Content="{x:Static resx:Strings.ConvertLights}"/>
        <TextBlock Margin="10,0,30,0"
                   Grid.Row="9"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.FacetingFactor}" />
        <TextBox Margin="175,10,10,10"
                 Grid.Row="9"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding FacetingFactor}" />

        <TextBlock Margin="10,0,10,0"
                   FontSize="12"
                   Grid.Row="10"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{x:Static resx:Strings.WorksetPrefixes}"/>
        <TextBox Margin="10,10,10,10"
                 Grid.Row="10"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding WorksetPrefix}"
                 ToolTip="{x:Static resx:Strings.WorksetPrefixesToolTip}"/>
        
        <CheckBox Margin="10"
                  Grid.Row="11"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="12"
                  Content="{x:Static resx:Strings.TurnOffLog}"
                  IsChecked="{Binding TurnOffLog}" />
        <Button Margin="10"
                Grid.Row="11"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="{x:Static resx:Strings.EraseList}"/>
        <Button Margin="10"
                Grid.Row="11"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Strings.Start}"
                ToolTip="{x:Static resx:Strings.StartToolTip}" />

        <TextBlock Margin="10"
                   FontSize="14"
                   Grid.Row="12"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.ListConfigs}" />
        <ListBox Margin="10"
                 Grid.Row="12"
                 Grid.RowSpan="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"
                 ToolTip="{x:Static resx:Strings.ListConfigsToolTip}"
                 SelectionMode="Extended"
                 SelectionChanged="ListBox_SelectionChanged"
                 ItemsSource="{Binding Configs}"
                 DisplayMemberPath="Name" />
        <Button Margin="10"
                Grid.Row="13"
                Grid.Column="0"
                Command="{Binding LoadConfigsCommand}"
                Content="{x:Static resx:Strings.LoadConfigs}"
                ToolTip="{x:Static resx:Strings.LoadConfigsToolTip}" />
        <Button Margin="10"
                Grid.Row="14"
                Grid.Column="0"
                Command="{Binding RaiseBatchEventCommand}"
                Content="{x:Static resx:Strings.Begin}"
                ToolTip="{x:Static resx:Strings.BeginToolTip}" />
    </Grid>
</base:WindowBase>