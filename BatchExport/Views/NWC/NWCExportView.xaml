<base:WindowBase x:Class="AlterTools.BatchExport.Views.NWC.NWCExportView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="900"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Strings.NWC_Title}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Base_Header}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Strings.Base_Button_Help_ToolTip}"
                Content="{x:Static resx:Strings.Base_Button_Help_Content}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Strings.Base_ListBox_ToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Strings.Base_Button_Load_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Load_ToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Strings.Base_Button_LoadList_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_LoadList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Strings.Base_Button_SaveList_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_SaveList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Strings.Base_Button_Delete_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Delete_ToolTip}" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="14"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Base_ResultingFolder}" />
        <TextBox Grid.Column="0" Margin="165,10,135,10"
                 Grid.Row="3"
                 Grid.ColumnSpan="4"
                 VerticalContentAlignment="Center"
                 Text="{Binding FolderPath}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="3"
                Command="{Binding BrowseFolderCommand}"
                Content="{x:Static resx:Strings.Base_Button_Browse}" />
        
        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   ToolTip="{x:Static resx:Strings.Base_Prefix_ToolTip}"
                   Text="{x:Static resx:Strings.Base_Prefix}" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.ColumnSpan="2" Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePrefix}"
                 ToolTip="{x:Static resx:Strings.Base_Prefix_ToolTip}" />
        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   ToolTip="{x:Static resx:Strings.Base_Postfix_ToolTip}"
                   Text="{x:Static resx:Strings.Base_Postfix}" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePostfix}"
                 ToolTip="{x:Static resx:Strings.Base_Postfix_ToolTip}" />

        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertElementProperties}"
                  Content="{x:Static resx:Strings.NWC_ConvertElementProperties}"/>
        <TextBlock Margin="10,10,110,10"
                   Grid.Row="5"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.NWC_Coordinates}" />
        <ComboBox Margin="95,10,10,10"
                  Grid.Row="5"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding Coordinates}"
                  SelectedItem="{Binding SelectedCoordinates}"
                  DisplayMemberPath="Value" />
        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="2"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding DivideFileIntoLevels}"
                  Content="{x:Static resx:Strings.NWC_DivideFile}"/>
        <CheckBox Margin="10,10,10,10"
                  Grid.Row="5"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportElementIds}"
                  Content="{x:Static resx:Strings.NWC_ExportElementIds}"/>

        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportLinks}"
                  Content="{x:Static resx:Strings.NWC_ExportLinks}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportParts}"
                  Content="{x:Static resx:Strings.NWC_ExportParts}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="2"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportRoomAsAttribute}"
                  Content="{x:Static resx:Strings.NWC_ExportRoomAsAttr}"/>
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportRoomGeometry}"
                  Content="{x:Static resx:Strings.NWC_ExportRoomGeometry}"/>

        <RadioButton Margin="10"
                     Grid.Row="7"
                     Grid.Column="0"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeWhole}"
                     Content="{x:Static resx:Strings.Base_ExportScopeWhole}"/>
        <RadioButton Margin="10,10,50,10"
                     Grid.Row="7"
                     Grid.Column="1"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeView}"
                     Content="{x:Static resx:Strings.Base_ExportScopeView}"/>
        <TextBox Margin="155,10,10,10"
                 Grid.Row="7"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding ViewName}" />
        <CheckBox Margin="10"
                  Grid.Row="7"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding IgnoreMissingView}"
                  Content="{x:Static resx:Strings.Base_IgnoreMissingView}"
                  FontSize="11"/>

        <CheckBox Margin="10"
                  Grid.Row="8"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding FindMissingMaterials}"
                  Content="{x:Static resx:Strings.NWC_FindMissingMaterials}"/>
        <TextBlock Margin="10,0,30,0"
                   FontSize="12"
                   Grid.Row="8"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{x:Static resx:Strings.NWC_ConvertElementParams}" />
        <ComboBox Margin="175,10,10,10"
                  Grid.Row="8"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding Parameters}"
                  SelectedItem="{Binding SelectedParameters}"
                  DisplayMemberPath="Value" />
        <CheckBox Margin="10"
                  Grid.Row="8"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ExportUrls}"
                  Content="{x:Static resx:Strings.NWC_ExportURLs}" />
        
        <CheckBox Margin="10"
                  Grid.Row="9"
                  Grid.Column="0"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertLinkedCADFormats}"
                  Content="{x:Static resx:Strings.NWC_ExportCAD}"/>
        <CheckBox Margin="10"
                  Grid.Row="9"
                  Grid.Column="1"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding ConvertLights}"
                  Content="{x:Static resx:Strings.NWC_ConvertLights}"/>
        <TextBlock Margin="10,0,30,0"
                   Grid.Row="9"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.NWC_Faceting}" />
        <TextBox Margin="175,10,10,10"
                 Grid.Row="9"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding FacetingFactor}" />

        <TextBlock Margin="10,0,10,0"
                   FontSize="12"
                   Grid.Row="10"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{x:Static resx:Strings.Base_WorksetPrefixes}"/>
        <TextBox Margin="10,10,10,10"
                 Grid.Row="10"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding WorksetPrefix}"
                 ToolTip="{x:Static resx:Strings.Base_WorksetPrefixes_ToolTip}"/>
        
        <CheckBox Margin="10"
                  Grid.Row="11"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="12"
                  Content="{x:Static resx:Strings.Base_TurnOffLog}"
                  IsChecked="{Binding TurnOffLog}" />
        <Button Margin="10"
                Grid.Row="11"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="{x:Static resx:Strings.Base_Button_EraseList}"/>
        <Button Margin="10"
                Grid.Row="11"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Strings.Base_Button_Start_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Start_ToolTip}" />

        <TextBlock Margin="10"
                   FontSize="14"
                   Grid.Row="12"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.NWC_ListConfigs}" />
        <ListBox Margin="10"
                 Grid.Row="12"
                 Grid.RowSpan="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"
                 ToolTip="{x:Static resx:Strings.NWC_ListConfigs_ToolTip}"
                 SelectionMode="Extended"
                 SelectionChanged="ListBox_SelectionChanged"
                 ItemsSource="{Binding Configs}"
                 DisplayMemberPath="Name" />
        <Button Margin="10"
                Grid.Row="13"
                Grid.Column="0"
                Command="{Binding LoadConfigsCommand}"
                Content="{x:Static resx:Strings.NWC_Button_LoadConfigs}"
                ToolTip="{x:Static resx:Strings.NWC_Button_LoadConfigs_ToolTip}" />
        <Button Margin="10"
                Grid.Row="14"
                Grid.Column="0"
                Command="{Binding RaiseBatchEventCommand}"
                Content="{x:Static resx:Strings.NWC_Button_Begin}"
                ToolTip="{x:Static resx:Strings.NWC_Button_Begin_ToolTip}" />
    </Grid>
</base:WindowBase>