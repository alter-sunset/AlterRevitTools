<base:WindowBase x:Name="BatchExportTransmit"
                 x:Class="AlterTools.BatchExport.Views.Transmit.TransmitModelsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="500"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Strings.TransmitTitle}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.BaseHeader}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Strings.HelpToolTip}"
                Content="{x:Static resx:Strings.Help}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Strings.ListBoxToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Strings.Load}"
                ToolTip="{x:Static resx:Strings.LoadToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Strings.LoadList}"
                ToolTip="{x:Static resx:Strings.LoadListTxtToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Strings.SaveList}"
                ToolTip="{x:Static resx:Strings.SaveListTxtToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Strings.Delete}"
                ToolTip="{x:Static resx:Strings.DeleteToolTip}" />

        <TextBlock Margin="10,10,10,10"
                   FontSize="14"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.SaveToFolder}" />
        <TextBox Margin="10,10,135,10"
                 VerticalContentAlignment="Center"
                 Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"
                 Text="{Binding FolderPath}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="3"
                Command="{Binding BrowseFolderCommand}"
                Content="{x:Static resx:Strings.Browse}" />
        <CheckBox Margin="10"
                  VerticalContentAlignment="Center"
                  Grid.Row="4"
                  Grid.Column="0"
                  IsChecked="{Binding IsSameFolder}"
                  Content="{x:Static resx:Strings.PutEverythingInSingleFolder}"
                  ToolTip="{x:Static resx:Strings.PutEverythingInSingleFolderToolTip}"/>

        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="2"
                Content="{x:Static resx:Strings.EraseList}"
                Command="{Binding EraseCommand}" />
        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Strings.Start}"
                ToolTip="{x:Static resx:Strings.StartToolTip}" />
    </Grid>
</base:WindowBase>