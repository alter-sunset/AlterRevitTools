<base:WindowBase x:Name="LinkModels"
                 x:Class="AlterTools.BatchExport.Views.Link.LinkModelsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="550"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Resources.Link_Title}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Resources.Link_Header}" />

        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Resources.Base_Button_Help_ToolTip}"
                Content="{x:Static resx:Resources.Base_Button_Help_Content}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 Width="760"
                 SelectionMode="Extended"
                 ItemsSource="{Binding Entries}"
                 SelectedItem="{Binding SelectedEntry}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Left"
                 SelectionChanged="ListBox_SelectionChanged"
                 ToolTip="{x:Static resx:Resources.Base_ListBox_ToolTip}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}"
                                   Grid.Column="0"
                                   TextWrapping="NoWrap"/>
                        <ComboBox
                            Margin="10,0,10,0"
                            Grid.Column="1"
                            SelectedItem="{Binding SelectedWorkset, Mode=TwoWay}"
                            ItemsSource="{Binding Worksets}"
                            DisplayMemberPath="Name" />
                        <ComboBox
                            Width="70"
                            SelectedItem="{Binding SelectedImportPlacement, Mode=TwoWay}"
                            ItemsSource="{Binding ImportPlacements}"
                            Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Resources.Base_Button_Load_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Load_ToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Resources.Base_Button_LoadList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_LoadList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Resources.Base_Button_SaveList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_SaveList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Resources.Base_Button_Delete_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Delete_ToolTip}" />

        <CheckBox Margin="10,0,10,0"
                  Grid.Column="0"
                  Grid.Row="4"
                  VerticalAlignment="Center"
                  Content="{x:Static resx:Resources.Link_Pin}"
                  IsChecked="{Binding PinLinks}" />
        <TextBlock Margin="10,0,10,0"
                   FontSize="12"
                   Grid.Row="4"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{x:Static resx:Resources.Base_WorksetPrefixes}" />
        <TextBox Margin="10,10,10,10"
                 Grid.Row="4"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding WorksetPrefix}"
                 ToolTip="{x:Static resx:Resources.Base_WorksetPrefixes_ToolTip}" />

        <CheckBox Margin="10,0,100,0"
                  Grid.Column="0"
                  Grid.Row="5"
                  VerticalAlignment="Center"
                  Content="{x:Static resx:Resources.Link_CurrentWorkset}"
                  Grid.ColumnSpan="2"
                  IsChecked="{Binding IsCurrentWorkset}" />

        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="{x:Static resx:Resources.Base_Button_EraseList}" />
        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Resources.Base_Button_Start_Content}" />
    </Grid>
</base:WindowBase>