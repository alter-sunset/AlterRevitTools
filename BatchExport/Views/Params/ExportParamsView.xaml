<base:WindowBase x:Class="AlterTools.BatchExport.Views.Params.ExportParamsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 mc:Ignorable="d"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False"
                 Height="550"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="Пакетный экспорт параметров">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="Список RVT файлов для обработки" />

        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Resources.Base_Button_Help_ToolTip}"
                Content="{x:Static resx:Resources.Base_Button_Help_Content}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Resources.Base_ListBox_ToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Resources.Base_Button_Load_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Load_ToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Resources.Base_Button_LoadList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_LoadList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Resources.Base_Button_SaveList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_SaveList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Resources.Base_Button_Delete_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Delete_ToolTip}" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="12"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Путь к выходному файлу" />
        <TextBox Grid.Column="0" Margin="165,10,135,10"
                 Grid.Row="3"
                 Grid.ColumnSpan="4"
                 VerticalContentAlignment="Center"
                 Text="{Binding CsvPath}"
                 ToolTip="Укажите путь к выходному файлу формата .csv" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="3"
                Command="{Binding BrowseCsvCommand}"
                Content="{x:Static resx:Resources.Base_Button_Browse}" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="12"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Параметры для экспорта" />
        <TextBox Grid.Column="0" Margin="165,10,10,10"
                 Grid.Row="4"
                 Grid.ColumnSpan="4"
                 VerticalContentAlignment="Center"
                 Text="{Binding ParamsNames}"
                 ToolTip="Укажите через точку-запятую (;) имена параметров, которые необходимо экспортировать." />

        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="Очистить список" />
        <Button Margin="10"
                Grid.Row="5"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Resources.Base_Button_Start_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Start_ToolTip}" />
    </Grid>
</base:WindowBase>