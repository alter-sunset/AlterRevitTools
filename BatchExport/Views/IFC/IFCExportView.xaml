<base:WindowBase x:Name="BatchExportIFC"
                 x:Class="AlterTools.BatchExport.Views.IFC.IFCExportView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="700"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Resources.IFC_Title}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Resources.Base_Header}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Resources.Base_Button_Help_ToolTip}"
                Content="{x:Static resx:Resources.Base_Button_Help_Content}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Resources.Base_ListBox_ToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Resources.Base_Button_Load_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Load_ToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Resources.Base_Button_LoadList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_LoadList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Resources.Base_Button_SaveList_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_SaveList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Resources.Base_Button_Delete_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Delete_ToolTip}" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="14"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Resources.Base_ResultingFolder}" />
        <TextBox Margin="165,10,135,10"
                 Grid.Row="3"
                 Grid.ColumnSpan="4" Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Text="{Binding FolderPath}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="3"
                Command="{Binding BrowseFolderCommand}"
                Content="{x:Static resx:Resources.Base_Button_Browse}" />

        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   ToolTip="Префикс, который необходимо вставить перед названием файла"
                   FontSize="12"
                   Text="Префикс названия" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.ColumnSpan="2" Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePrefix}"
                 ToolTip="Префикс, который необходимо вставить перед названием файла" />
        <TextBlock Margin="10,0,80,0"
                   Grid.Row="4"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   ToolTip="Постфикс, который необходимо вставить после названия файла"
                   FontSize="12"
                   Text="Постфикс названия" />
        <TextBox Margin="125,10,10,10"
                 Grid.Row="4"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding NamePostfix}"
                 ToolTip="Постфикс, который необходимо вставить после названия файла" />

        <TextBlock Margin="10,0,40,0"
                   FontSize="14"
                   Grid.Row="5"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Таблица соответствия параметров экспорта" />

        <TextBox Margin="165,10,135,10"
                 Grid.Row="5"
                 Grid.ColumnSpan="4" Grid.Column="0"
                 VerticalContentAlignment="Center"
                 Text="{Binding Mapping}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="5"
                Command="{Binding LoadMappingCommand}"
                Content="{x:Static resx:Resources.Base_Button_Browse}" />

        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="12"
                  Content="Экспорт основных величин"
                  IsChecked="{Binding ExportBaseQuantities}" />
        <TextBlock Margin="10,0,100,0"
                   FontSize="14"
                   Grid.Row="6"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="Версия IFC" />
        <ComboBox Margin="100,10,10,10"
                  Grid.Row="6"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding IFCVersions}"
                  SelectedItem="{Binding SelectedVersion}"
                  DisplayMemberPath="Value" />
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding WallAndColumnSplitting}">
            <TextBlock>
                Разделить стены, колонны
                <LineBreak /> и воздуховоды по уровню
            </TextBlock>
        </CheckBox>

        <RadioButton Margin="10"
                     Grid.Row="7"
                     Grid.Column="0"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeWhole}"
                     Content="Экспортировать весь проект" />
        <RadioButton Margin="10,10,50,10"
                     Grid.Row="7"
                     Grid.Column="1"
                     VerticalContentAlignment="Center"
                     GroupName="ExportScope"
                     IsChecked="{Binding ExportScopeView}"
                     Content="Экспортировать вид" />
        <TextBox Margin="155,10,10,10"
                 Grid.Row="7"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Grid.ColumnSpan="2"
                 Text="{Binding ViewName}" />
        <CheckBox Margin="10"
                  Grid.Row="7"
                  Grid.Column="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding IgnoreMissingView}">
            <TextBlock FontSize="11">
                Игнорировать отсутствие вида
                <LineBreak/>
                и экспортировать весь проект
            </TextBlock>
        </CheckBox>

        <TextBlock Margin="10,0,40,0"
                   FontSize="14"
                   Grid.Row="8"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Text="Границы пространств" />

        <ComboBox Margin="165,9,10,11"
                  Grid.Row="8"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  VerticalContentAlignment="Center"
                  ItemsSource="{Binding SpaceBoundaryLevels}"
                  SelectedItem="{Binding SelectedLevel}"
                  DisplayMemberPath="Value" />

        <TextBlock Margin="10,0,10,0"
                   FontSize="12"
                   Grid.Row="9"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Префиксы рабочих наборов, которые нужно закрыть" />
        <TextBox Margin="10,10,10,10"
                 Grid.Row="9"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding WorksetPrefix}"
                 ToolTip="Укажите через точку-запятую (;) префиксы всех рабочих наборов, которые необходимо закрыть при открытии файла. Обычно закрывают рабочие наборы со связями, чтобы ускорить открытие моделей." />

        
        <CheckBox Margin="10"
                  Grid.Row="10"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="12"
                  Content="Не создавать лог-файл"
                  IsChecked="{Binding TurnOffLog}" />
        <Button Margin="10"
                Grid.Row="10"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="Очистить список" />
        <Button Margin="10"
                Grid.Row="10"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Resources.Base_Button_Start_Content}"
                ToolTip="{x:Static resx:Resources.Base_Button_Start_ToolTip}" />
    </Grid>
</base:WindowBase>