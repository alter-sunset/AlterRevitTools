<base:WindowBase x:Name="BatchExportDetach"
                 x:Class="AlterTools.BatchExport.Views.Detach.DetachModelsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:base="clr-namespace:AlterTools.BatchExport.Views.Base"
                 xmlns:resx="clr-namespace:AlterTools.BatchExport.Resources"
                 Height="600"
                 Width="800"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="{x:Static resx:Strings.Detach_Title}"
                 IsEnabled="{Binding IsViewEnabled}"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,10,0"
                   FontSize="14"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Base_Header}" />

        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="0"
                Command="{Binding HelpCommand}"
                ToolTip="{x:Static resx:Strings.Base_Button_Help_ToolTip}"
                Content="{x:Static resx:Strings.Base_Button_Help_Content}" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Margin="10"
                 SelectionMode="Extended"
                 ItemsSource="{Binding ListBoxItems}"
                 SelectedItem="{Binding SelectedItem}"
                 ToolTip="{x:Static resx:Strings.Base_ListBox_ToolTip}" />

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="2"
                Command="{Binding LoadCommand}"
                Content="{x:Static resx:Strings.Base_Button_Load_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Load_ToolTip}" />
        <Button Margin="10"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding LoadListCommand}"
                Content="{x:Static resx:Strings.Base_Button_LoadList_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_LoadList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="2"
                Grid.Row="2"
                Command="{Binding SaveListCommand}"
                Content="{x:Static resx:Strings.Base_Button_SaveList_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_SaveList_ToolTip}" />
        <Button Margin="10"
                Grid.Column="3"
                Grid.Row="2"
                Command="{Binding DeleteCommand}"
                Content="{x:Static resx:Strings.Base_Button_Delete_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Delete_ToolTip}" />

        <RadioButton Margin="10,10,10,10"
                     FontSize="14"
                     Grid.Row="4"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     GroupName="SavingPathMode"
                     Name="RbFolder"
                     Command="{Binding RadioButtonCommand}"
                     CommandParameter="{Binding ElementName=RbFolder, Path=Tag}"
                     Content="{x:Static resx:Strings.Base_ResultingFolder}"
                     Tag="Folder" />
        <TextBox Margin="10,10,135,10"
                 VerticalContentAlignment="Center"
                 Grid.Row="4"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"
                 Text="{Binding FolderPath}" />
        <Button Margin="80,10,10,10"
                Grid.Column="3"
                Grid.Row="4"
                Command="{Binding BrowseFolderCommand}"
                Content="{x:Static resx:Strings.Base_Button_Browse}" />

        <RadioButton Margin="10,10,10,10"
                     FontSize="14"
                     Grid.Row="5"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     GroupName="SavingPathMode"
                     Content="{x:Static resx:Strings.Detach_Mask}"
                     Name="RbMask"
                     Command="{Binding RadioButtonCommand}"
                     CommandParameter="{Binding ElementName=RbMask, Path=Tag}"
                     Tag="Mask" />
        <TextBlock Margin="10,0,100,0"
                   FontSize="14"
                   Grid.Row="5"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Detach_Change}" />
        <TextBox Margin="110,10,80,10"
                 Grid.Row="5"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding MaskIn}" />
        <TextBlock Margin="140,0,30,0"
                   FontSize="14"
                   Grid.Row="5"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Text="{x:Static resx:Strings.Detach_To}" />
        <TextBox Margin="180,10,10,10"
                 Grid.Row="5"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding MaskOut}" />

        <CheckBox Margin="10,0,0,0"
                  Grid.Row="6"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="14"
                  Content="{x:Static resx:Strings.Detach_Rename}"
                  IsChecked="{Binding IsToRename}" />
        <TextBox Margin="10"
                 Grid.Row="6"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Text="{Binding MaskInName}" />
        <TextBlock Grid.Row="6"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Text="=>" Grid.ColumnSpan="2" Width="20" />
        <TextBox Margin="10"
                 Grid.Row="6"
                 Grid.Column="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding MaskOutName}" />
        <CheckBox Margin="10"
                  Grid.Row="6"
                  Grid.Column="3"
                  FontSize="14"
                  VerticalAlignment="Center"
                  Content="{x:Static resx:Strings.Detach_CheckBox_Purge_Content}"
                  ToolTip="{x:Static resx:Strings.Detach_CheckBox_Purge_ToolTip}"
                  IsChecked="{Binding Purge}"
                  IsEnabled="{Binding IsPurgeEnabled}" />

        <CheckBox Margin="10,0,95,0"
                  Grid.Row="7"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  FontSize="14"
                  VerticalAlignment="Center"
                  Content="{x:Static resx:Strings.Detach_CheckBox_EmptyView_Content}"
                  ToolTip="{x:Static resx:Strings.Detach_CheckBox_EmptyView_ToolTip}"
                  IsChecked="{Binding CheckForEmptyView}" />
        <TextBox Margin="110,10,80,10"
                 Grid.Row="7"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Text="{Binding ViewName}"
                 ToolTip="{x:Static resx:Strings.Detach_ViewName}" />
        <CheckBox Margin="140,10,10,10"
                  Grid.Row="7"
                  Grid.Column="2"
                  Grid.ColumnSpan="2"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  Content="{x:Static resx:Strings.Const_RemoveEmptyWorksets}"
                  IsChecked="{Binding RemoveEmptyWorksets}"
                  IsEnabled="{Binding IsWorksetRemoverEnabled}" />

        <CheckBox Margin="10,0,0,0"
                  Grid.Row="8"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  FontSize="14"
                  Content="{x:Static resx:Strings.Const_RemoveLinks}"
                  IsChecked="{Binding RemoveLinks}" />

        <Button Margin="10"
                Grid.Row="8"
                Grid.Column="2"
                Command="{Binding EraseCommand}"
                Content="{x:Static resx:Strings.Base_Button_EraseList}" />
        <Button Margin="10"
                Grid.Row="8"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="{x:Static resx:Strings.Base_Button_Start_Content}"
                ToolTip="{x:Static resx:Strings.Base_Button_Start_ToolTip}" />

    </Grid>
</base:WindowBase>