<base:WindowBase x:Name="BatchMigrate"
                 x:Class="VLS.BatchExport.Views.Migrate.MigrateModelsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:local="clr-namespace:VLS.BatchExport.Views.Migrate"
                 xmlns:base="clr-namespace:VLS.BatchExport.Views.Base"
                 Height="200"
                 Width="600"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Title="Пакетная миграция моделей"
                 IsEnabled="{Binding IsViewEnabled}"
                 Topmost="True"
                 ShowInTaskbar="False">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Margin="10"
                Grid.Column="0"
                Grid.Row="0"
                Command="{Binding LoadListCommand}"
                Content="Загрузить конфиг"/>
        <Button Margin="10"
                Grid.Row="0"
                Grid.Column="3"
                Command="{Binding HelpCommand}"
                Content="Справка"/>

        <TextBox Margin="10"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Text="{Binding ConfigPath}"
                 VerticalContentAlignment="Center"/>

        <Button Margin="10"
                Grid.Row="2"
                Grid.Column="3"
                Command="{Binding RaiseEventCommand}"
                Content="Запуск"
                ToolTip="Запуск пакетного экспорта текущей конфигурации"/>

    </Grid>
</base:WindowBase>